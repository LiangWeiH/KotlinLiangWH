<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlintest">

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/enjoylife"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/enjoylife"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" /> <!-- 适配华为（huawei）刘海屏 -->
        <activity
            android:name="com.yimaotong.fruitbase.ui.error.CustomErrorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fragment.home.classify.Photogram.photo_activity.PhotoViewActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米（xiaomi）刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
    </application>

</manifest>