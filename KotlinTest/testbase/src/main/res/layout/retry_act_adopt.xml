<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retry_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="324px"
        android:src="@drawable/retry_act_adopt_bg" />

    <TextView
        android:id="@+id/retry_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:text="网络开小差中，找不到您请求的页面..."
        android:textColor="#999"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/retry_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retry_t"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130px"
        android:src="@drawable/retry_act_adopt_refresh" />

</com.zhy.autolayout.AutoRelativeLayout>